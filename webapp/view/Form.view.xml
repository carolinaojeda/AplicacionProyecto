<mvc:View
    xmlns:form="sap.ui.layout.form"
    height="100%"
    controllerName="projectdes.controller.Form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
>
    <Page
        id="page"
        showHeader="true"
    >
        <customHeader>
            <Bar id="bar">
                <contentRight>
                    <Button
                        id="edit"
                        text="Editar"
                        press="handleEditPress"
                    />
                    <Button
                        id="save"
                        text="Guardar"
                        type="Emphasized"
                        press="handleSavePress"
                    />
                    <Button
                        id="saveCreate"
                        text="Guardar"
                        type="Emphasized"
                        press="handleSaveCreatePress"
                    />
                    <Button
                        id="cancel"
                        text="Cancelar"
                        press="handleCancelPress"
                    />
                </contentRight>
            </Bar>
        </customHeader>

        <VBox
            id="vbox"
            class="sapUiSmallMargin"
        >
            <f:Form
                id="FormDisplay354"
                editable="false"
            >
                <f:title>
                    <core:Title
                        id="title"
                        text="Products details"
                    />
                </f:title>
                <f:layout>
                    <f:ResponsiveGridLayout
                        id="rgl"
                        labelSpanXL="3"
                        labelSpanL="3"
                        labelSpanM="3"
                        labelSpanS="12"
                        adjustLabelSpan="false"
                        emptySpanXL="4"
                        emptySpanL="4"
                        emptySpanM="4"
                        emptySpanS="0"
                        columnsXL="1"
                        columnsL="1"
                        columnsM="1"
                        singleContainerFullSize="false"
                        busy= "false"
                    />
                </f:layout>
                <f:formContainers>
                    <f:FormContainer id="FC">
                        <f:formElements>
                            <f:FormElement
                                id="feID"
                                label="ID"
                            >
                                <f:fields>
                                    <Text
                                        text="{modelView>/ID}"
                                        id="IDText"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                id="newID"
                                label="ID"
                            >
                                <f:fields>
                                    <Text
                                        text=""
                                        id="IDNew"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                id="feName"
                                label="Name"
                            >
                                <f:fields>
                                    <Text
                                        text="{modelView>/Name}"
                                        id="nameText"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                id="feName1"
                                label="Name"
                            >
                                <f:fields>
                                    <Input
                                        id="nameInput"
                                        value="{modelView>/Name}"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                id="NewName"
                                label="Name"
                            >
                                <f:fields>
                                    <Input id="namenewInput" />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                id="feDesc"
                                label="Description"
                            >
                                <f:fields>
                                    <Text
                                        text="{modelView>/Description}"
                                        id="descText"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                id="feDesc1"
                                label="Description"
                            >
                                <f:fields>
                                    <Input
                                        id="descInput"
                                        value="{modelView>/Description}"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                id="NewDesc"
                                label="Description"
                            >
                                <f:fields>
                                    <Input id="descnewInput" />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                id="fePrice"
                                label="Price"
                            >
                                <f:fields>
                                    <Text
                                        text="{modelView>/Price}"
                                        id="priceText"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                id="fePrice1"
                                label="Price"
                            >
                                <f:fields>
                                    <Input
                                        id="priceInput"
                                        value="{modelView>/Price}"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                id="NewPrice"
                                label="Price"
                            >
                                <f:fields>
                                    <Input id="pricenewInput" />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                id="feRating"
                                label="Rating"
                            >
                                <f:fields>
                                    <Text
                                        text="{modelView>/Rating}"
                                        id="ratingText"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                id="feRating1"
                                label="Rating"
                            >
                                <f:fields>
                                    <Input
                                        id="ratingInput"
                                        value="{modelView>/Rating}"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                id="NewRating"
                                label="Rating"
                            >
                                <f:fields>
                                    <Input id="ratingnewInput" />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                id="feCat"
                                label="Category"
                            >
                                <f:fields>
                                    <Text
                                        text="{modelView>/Category/Name}"
                                        id="categoryText"
                                    />
                                </f:fields>
                            </f:FormElement>

                            <f:FormElement
                                id="feSupplier"
                                label="Supplier"
                            >
                                <f:fields>
                                    <Text
                                        text="{modelView>/Supplier/Name}"
                                        id="supplierText"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                id="feRD"
                                label="Release Date"
                            >
                                <f:fields>
                                    <Text
                                        text="{modelView>/ReleaseDate}"
                                        id="rdText"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                id="feRD1"
                                label="Release Date"
                            >
                                <f:fields>
                                    <DateTimePicker
                                        id="dateRD"
                                        value="{path: 'modelView>/ReleaseDate', type: 'sap.ui.model.type.DateTime', formatOptions: { pattern: 'yyyy-MM-ddTHH:mm:ss' }}"
                                    />
                                </f:fields>
                            </f:FormElement>
                             <f:FormElement
                                id="feRD1New"
                                label="Release Date"
                            >
                                <f:fields>
                                    <DateTimePicker
                                        id="dateRDNew"
                                        value="{path: '/', type: 'sap.ui.model.type.DateTime', formatOptions: { pattern: 'yyyy-MM-ddTHH:mm:ss' }}"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                id="feDD"
                                label="Discounted Date"
                            >
                                <f:fields>
                                    <Text
                                        text="{modelView>/DiscontinuedDate}"
                                        id="ddText"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                id="feDD1"
                                label="Discounted Date"
                            >
                                <f:fields>
                                    <DateTimePicker
                                        id="dateDD"
                                        value="{path: 'modelView>/DiscontinuedDate', type: 'sap.ui.model.type.DateTime', formatOptions: { pattern: 'yyyy-MM-ddTHH:mm:ss' }}"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                id="feDD1New"
                                label="Discounted Date"
                            >
                                <f:fields>
                                    <DateTimePicker
                                        id="dateDDNew"
                                        value="{path: '/', type: 'sap.ui.model.type.DateTime', formatOptions: { pattern: 'yyyy-MM-ddTHH:mm:ss' }}"
                                    />
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </VBox>
    </Page>
</mvc:View>
